<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        >

    </FrameLayout>
    <Button
        android:id="@+id/button_capture"
        android:text="Capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView_nextCamera"
        android:layout_gravity="right|top"
        android:src="@android:drawable/ic_menu_rotate"
        android:clickable="true"
        android:background="@android:color/transparent"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:id="@+id/imageView_cancel"
        android:layout_gravity="left|bottom"
        android:src="@drawable/abc_ic_clear_normal"
        android:background="#df691a"
        android:alpha="0.8"
        android:padding="15dp"
        android:layout_margin="10dp"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:id="@+id/imageView_accept"
        android:layout_gravity="right|bottom"
        android:src="@drawable/abc_ic_cab_done_holo_dark"
        android:background="#df691a"
        android:alpha="0.8"
        android:padding="15dp"
        android:layout_margin="10dp"
        android:visibility="invisible" />

</FrameLayout>
