@model Angora.Web.Models.EventFeedViewModel

@{
    ViewBag.Title = "Event Feed";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<a class="btn btn-primary" href="@Url.Action("Create", "Event")">Create New Event</a>
<div id="EventFeed">
    <h1>Your Events</h1>
    @if (Model.Events.Count() == 0)
    {
        <p>There's nothing to see here... you should make some events!</p>
    }

    @foreach (var e in Model.Events)
    {
        <div class="well well-sm event-feed" >
            <div class="info">
                <h3>@Html.DisplayFor(ev => e.Name)</h3>
                <p class="lead">@Html.DisplayFor(ev => e.Tags)</p>
                <h5>@Html.DisplayFor(ev => e.StartDateTime) at @Html.DisplayFor(ev => e.Location)</h5>
                <p>@Html.DisplayFor(ev => e.Description)</p>
            </div>
            <div class="btn-group btn-group-justified">
                <a href="@Url.Action("Edit", "Event", new { id = e.Id })" class="btn btn-primary">Edit</a>
                <a href="@Url.Action("DeleteEvent", "Event", new { id = e.Id })" class="btn btn-danger">Delete</a>
            </div>
        </div>
    }

</div>
