@model Angora.Web.Models.ManageAccountViewModel

<h2>Manage your profile</h2>

@foreach (var success in Model.Errors)
{
    <div class="alert alert-dismissable alert-danger">
        <button type="button" class="close" data-dismiss="alert">×</button>
        @success
    </div>
}

@foreach (var success in Model.Successes)
{
    <div class="alert alert-dismissable alert-success">
        <button type="button" class="close" data-dismiss="alert">×</button>
        @success
    </div>
}

@foreach (var success in Model.Infos)
{
    <div class="alert alert-dismissable alert-info">
        <button type="button" class="close" data-dismiss="alert">×</button>
        @success
    </div>
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">Basic Information</div>
            <div class="panel-body">

                @using (Html.BeginForm("UpdateUserInfo", "ManageAccount", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken();

                    <div class="form-group">
                        <label class="col-sm-1 control-label">First Name</label>
                        <div class="col-sm-5">
                            @Html.TextBoxFor(m => m.User.FirstName, new { @class = "form-control", required = "required" })
                        </div>
                        <label class="col-sm-1 control-label">Last Name</label>
                        <div class="col-sm-5">
                            @Html.TextBoxFor(m => m.User.LastName, new { @class = "form-control", required = "required" })
                        </div>
                    </div>
                    <div class="form-group">

                        <label class="col-sm-1 control-label">Birthday</label>

                        <div class="col-sm-5">
                            @Html.TextBoxFor(m => m.User.Birthday, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", required = "required", min = "1900-1-1", max = DateTime.Today.AddYears(-10).ToString("yyyy-MM-dd") })
                        </div><label class="col-sm-1 control-label">Email</label>


                        <div class="col-sm-5">
                            @Html.TextBoxFor(m => m.User.EmailAddress, new { @class = "form-control", type = "email", required = "required" })
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-sm-1 control-label">Location</label>
                        <div class="col-sm-5">
                            @Html.TextBoxFor(m => m.User.Location, new { @class = "form-control", required = "required" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <button type="submit" class="btn btn-default width-100">Save Changes</button>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-6">

        <div class="panel panel-default">
            <div class="panel-heading">Profile Picture</div>

            <ul class="list-group">
                <li class="list-group-item media">
                    <img class="profile-pic-sm pull-left media-object" src="@(Model.User.ProfilePictureUrl ?? "/Images/default-user-profile.png")" alt=" ...">
                    <div class="media-body">
                        <button class="btn btn-default width-100 text-left">Use Facebook profile picture</button>
                    </div>
                </li>
                <li class="list-group-item media">
                    <img class="profile-pic-sm pull-left media-object" src="@(Model.User.ProfilePictureUrl ?? "/Images/default-user-profile.png")" alt=" ...">

                    <div class="media-body">
                        <button class="btn btn-default width-100 text-left">Use Twitter profile picture</button>
                    </div>
                </li>

            </ul>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="panel panel-default">
            <div class="panel-heading">Linked Accounts</div>
            <div class="list-group">
                <ul class="list-group">
                    <li class="list-group-item media">
                        <img class="profile-pic-sm pull-left media-object" src="/Images/Logos/fb-white-50.png" alt=" ...">
                        <div class="media-body">
                            <h5 class="pull-left text-overflow-ellipses">Your account is linked to Facebook</h5>
                            <button class="btn btn-default pull-right">Unlink</button>
                        </div>
                    </li>
                    <li class="list-group-item media">
                        <img class="profile-pic-sm pull-left media-object" src="/Images/Logos/twitter-white.png" alt=" ...">

                        <div class="media-body">
                            <button class="btn btn-default width-100 text-left">Link your Twitter account</button>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">Privacy</div>
            <div class="panel-body">
                Coming Soon!
            </div>
        </div>
    </div>
</div>